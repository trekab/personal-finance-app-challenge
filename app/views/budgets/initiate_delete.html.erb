<% content_for :title, "Delete budget" %>

<%= turbo_frame_tag "modal" do %>
  <%= render partial: "shared/modal_header", locals: { title: "Delete '#{@budget.category.capitalize}'",
                                                       description: "Are you sure you want to delete this budget? This action cannot be reversed, and all the data inside it will be removed forever." } %>

  <%= link_to budget_path(@budget), data: { turbo_method: :delete,
                                            turbo_frame: "_top" }, class: "btn btn-error w-full mb-3" do %>
    Yes, Confirm Deletion
  <% end %>

  <%= link_to budgets_path, data: { turbo_frame: "_top" }, class: "btn btn-ghost w-full mb-3" do %>
    No, Go Back
  <% end %>
<% end %>